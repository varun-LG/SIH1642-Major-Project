// This is your Prisma schema file for the AYUSH Startup Registration Portal.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  role           Role     // Roles like 'admin', 'startup', etc.
  startups       Startup[]
  applications   Application[]
  notifications  Notification[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ayushCategory  String?  // Category of AYUSH system the user belongs to
}

model Startup {
  id             Int       @id @default(autoincrement())
  name           String
  founder        String
  email          String    @unique
  registrationNo String    @unique
  status         StartupStatus @default(PENDING)
  userId         Int       // Foreign key for the startup owner
  user           User      @relation(fields: [userId], references: [id])
  documents      Document[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Application {
  id             Int       @id @default(autoincrement())
  title          String
  founder        String
  description    String
  email          String
  status         ApplicationStatus @default(SUBMITTED)
  startupId      String       // Foreign key for the associated startup
  userId         Int       // Foreign key for the user who submitted the application
  user           User      @relation(fields: [userId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Document {
  id             Int       @id @default(autoincrement())
  url            String
  type           DocumentType
  uploadedAt     DateTime  @default(now())
  startupId      Int       // Foreign key for the associated startup
  startup        Startup   @relation(fields: [startupId], references: [id])
}

model Mentor{
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  number         String
  cataegory      String
  approved       Boolean   @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Notification {
  id             Int       @id @default(autoincrement())
  userId         Int       // Foreign key for the user receiving the notification
  user           User      @relation(fields: [userId], references: [id])
  title          String    // Notification title
  message        String    // Notification message
  type           NotificationType @default(GENERAL)
  isRead         Boolean   @default(false)
  applicationId  Int?      // Optional reference to application
  startupId      Int?      // Optional reference to startup
  createdAt      DateTime  @default(now())
}

enum Role {
  ADMIN
  STARTUP
  REVIEWER
}

enum ApplicationStatus {
  SUBMITTED
  IN_REVIEW
  APPROVED
  REJECTED
}

enum StartupStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DocumentType {
  REGISTRATION
  BUSINESS_PLAN
  COMPLIANCE
}

enum NotificationType {
  APPLICATION_STATUS
  MENTOR_APPROVAL
  GENERAL
  DOCUMENT_UPLOAD
}
